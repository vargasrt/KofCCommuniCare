<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--
    <TextView
        android:id="@+id/tv_textconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_textconnect"/>
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_kcshield"/>

        <LinearLayout
            android:id="@+id/layout_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_normal">
            <TextView
                android:id="@+id/text_msgbox_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_normal"
                android:textSize="@dimen/text_size_xsmall"
                android:text="2018-10-24 09:53:48"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/text_msgbox_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="@string/messagesample"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
