<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_msgbox_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="ID number"
        android:inputType="text" />

    <EditText
        android:id="@+id/edt_msgbox_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="Time stamp"
        android:inputType="text" />

    <EditText
        android:id="@+id/edt_msgbox_msgbound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="INBOX/OUTBOX"
        android:inputType="text" />

    <EditText
        android:id="@+id/edt_msgbox_msgparam1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="BCINQ/ALLW/SRP/UND"
        android:inputType="text" />

     <EditText
        android:id="@+id/edt_msgbox_msgparam2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="Account No/FC Code/Sender Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edt_msgbox_msgparam3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="PIN CODE/Submitted Date/Birth Date"
        android:inputType="text" />
</LinearLayout>